@model ResyRoom.ViewModels.RegisterUserViewModel

@{
    ViewBag.Title = "Registrar nuevo usuario";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script src="@Url.Content("~/Scripts/facebook-sdk-v2.js")" type="text/javascript"></script>
<script type="text/javascript">
    $(document).ready(function () {
        $("#Usuario_Banda_Descripcion").css('width', '188px');
    })
</script>
<div class="content">
    <div class="form">
        @using (Html.BeginForm())
        {
            <div class="tableForm">
                <div class="div-table register-user-div">
                    <div class="div-cell">
                        <h1 class="form-header">Información del Usuario</h1>
                        <div>
                            <span class="left-label">
                                @Html.LabelFor(u => u.RegistroUsuario.Usuario)
                            </span><span>
                                @Html.TextBoxFor(u => u.RegistroUsuario.Usuario, new { @class = "txt" })
                            </span>
                        </div>
                        <div>
                            <span class="left-label">
                                @Html.LabelFor(u => u.Usuario.Email)
                            </span>
                            <span>
                                @Html.TextBoxFor(u => u.Usuario.Email, new { @class = "txt" })
                            </span>
                        </div>
                        <div>
                            <span class="left-label">
                                @Html.LabelFor(u => u.Usuario.Password)
                            </span>
                            <span>
                                @Html.PasswordFor(u => u.Usuario.Password, new { @class = "txt" })
                            </span>
                        </div>
                        <div>
                            <span class="left-label">
                                @Html.LabelFor(u => u.RegistroUsuario.PasswordConfirmacion)
                            </span>
                            <span>
                                @Html.PasswordFor(u => u.RegistroUsuario.PasswordConfirmacion, new { @class = "txt" })
                            </span>
                        </div>
                    </div>
                    <div class="div-cell facebook-login">
                        <h1 class="facebook-header">Usar Facebook para entrar</h1>
                        <div class="facebook-button-login">
                            <fb:login-button scope="public_profile,email" size="large" onlogin="checkLoginState();">Iniciar Sesión</fb:login-button>
                        </div>
                    </div>
                </div>
                <div>
                    <h2>Registro</h2>
                    <p>
                        En <b>ResyRoom</b> brindamos el servicio para que cada usuario pueda buscar y evaluar
                        el estudio, ya sea de grabación o de ensayo que mas le acomode a su banda. Por esta
                        razón el registro como usuario es por <b>banda</b>.
                        <br />
                        <br />
                        Ingrese los datos para su <b>identificación</b> como usuario, y a continuación los
                        datos básicos de su <b>banda</b>
                    </p>
                </div>
            </div>
        }
    </div>
</div>

