@using ResyRoom.Infraestructura.Extensiones
@model ResyRoom.ViewModels.RegisterStudio.RoomViewModel

<div class="register-studio-room">
    <form>
        <div class="div-table form-row">
            <div class="div-cell label">
                @Html.LabelFor(u => u.Nombre)
            </div>
            <div class="div-cell value">
                @Html.TextBoxFor(u => u.Nombre, new { @class = "txt", data_bind = "value: Nombre" })
                @Html.ValidationMessageFor(u => u.Nombre)
            </div>
        </div>
        <div class="div-table form-row">
            <div class="div-cell label">
                @Html.LabelFor(u => u.Tamaño)
            </div>
            <div class="div-cell value">
                @Html.TextBoxFor(u => u.Tamaño, new { @class = "txt", data_bind = "value: Tamaño" })
                @Html.DescriptionFor(u => u.Tamaño)
            </div>
        </div>
        <div class="div-table form-row delete-room">
            <div class="div-cell label">
            </div>
            <div class="div-cell value">
                @Html.CheckBoxFor(u => u.SetDePlatos, new { @class = "txt", data_bind = "checked: SetDePlatos" })
                @Html.LabelFor(u => u.SetDePlatos)
            </div>
            <div class="div-cell delete-room-link">
                <a href="#">
                    <span class="x-icon">x</span>
                    Eliminar esta sala
                </a>
            </div>
        </div>
    </form>
</div>
